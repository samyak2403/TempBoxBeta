<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.TempBoxBeta.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:rippleColor="@color/gmail_selected_background"
    app:cardPreventCornerOverlap="true"
    android:stateListAnimator="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/gmail_card_background">

        <!-- Header with sender and time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Sender info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sender_name"
                    style="@style/TextAppearance.TempBoxBeta.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-medium"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/sender_email"
                    style="@style/TextAppearance.TempBoxBeta.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="john.doe@example.com" />

            </LinearLayout>

            <!-- Status indicators and time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Unread indicator -->
                    <View
                        android:id="@+id/unread_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_unread"
                        android:visibility="gone"
                        android:elevation="2dp" />

                    <!-- Attachment indicator -->
                    <ImageView
                        android:id="@+id/attachment_indicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_attachment"
                        android:visibility="gone"
                        app:tint="@color/gmail_text_secondary" />

                    <TextView
                        android:id="@+id/time_text"
                        style="@style/TextAppearance.TempBoxBeta.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        tools:text="2h ago" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Subject -->
        <TextView
            android:id="@+id/subject_text"
            style="@style/TextAppearance.TempBoxBeta.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="sans-serif"
            tools:text="Welcome to our service" />

        <!-- Preview text -->
        <TextView
            android:id="@+id/preview_text"
            style="@style/TextAppearance.TempBoxBeta.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="1dp"
            tools:text="Thank you for signing up! Here's what you need to know to get started..." />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 