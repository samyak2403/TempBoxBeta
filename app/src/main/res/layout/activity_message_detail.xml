<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gmail_background">

    <!-- Gmail-style Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.TempBoxBeta.Toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIconTint="@color/gmail_text_primary"
        app:titleTextColor="@color/gmail_text_primary" />

    <!-- SwipeRefresh Container -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <!-- Gmail-style Message Header Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/header_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/gmail_card_background"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/gmail_outline"
                    app:strokeWidth="0.5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Subject Text -->
                        <TextView
                            android:id="@+id/subject_text"
                            style="@style/TextAppearance.TempBoxBeta.Headline"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            app:layout_constraintEnd_toStartOf="@id/action_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Important Message Subject" />

                        <!-- Action Button (Reply/More) -->
                        <ImageView
                            android:id="@+id/action_button"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_refresh"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/gmail_text_secondary" />

                        <!-- Sender Info Section -->
                        <LinearLayout
                            android:id="@+id/sender_section"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/subject_text">

                            <!-- From Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="From: "
                                android:textColor="@color/gmail_text_secondary"
                                android:textSize="14sp" />

                            <!-- Sender Text -->
                            <TextView
                                android:id="@+id/sender_text"
                                style="@style/TextAppearance.TempBoxBeta.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                tools:text="john.doe@example.com" />

                        </LinearLayout>

                        <!-- Date Section -->
                        <LinearLayout
                            android:id="@+id/date_section"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sender_section">

                            <!-- Date Label -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="Date: "
                                android:textColor="@color/gmail_text_secondary"
                                android:textSize="14sp" />

                            <!-- Date Text -->
                            <TextView
                                android:id="@+id/date_text"
                                style="@style/TextAppearance.TempBoxBeta.Body"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                tools:text="Dec 25, 2024 at 2:30 PM" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Gmail-style Proportional WebView Container -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/webview_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:minHeight="400dp"
                    app:cardBackgroundColor="@color/gmail_background"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:layout_constraintBottom_toTopOf="@id/attachments_barrier"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/header_card"
                    app:layout_constraintVertical_bias="0"
                    app:strokeColor="@color/gmail_outline"
                    app:strokeWidth="0.5dp">

                    <!-- Gmail-style Proportional WebView -->
                    <WebView
                        android:id="@+id/content_webview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:background="@color/gmail_background"
                        android:scrollbars="vertical" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Attachments Barrier (for proper proportions) -->
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/attachments_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="top"
                    app:constraint_referenced_ids="attachments_label,attachments_recycler_view" />

                <!-- Gmail-style Attachments Section -->
                <TextView
                    android:id="@+id/attachments_label"
                    style="@style/TextAppearance.TempBoxBeta.Body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_vertical"
                    android:text="Attachments"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_attachment"
                    app:drawableTint="@color/gmail_text_secondary"
                    app:layout_constraintBottom_toTopOf="@id/attachments_recycler_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/attachments_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_attachment"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Gmail-style Error State -->
    <LinearLayout
        android:id="@+id/error_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gmail_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:alpha="0.6"
            android:src="@drawable/ic_refresh"
            app:tint="@color/gmail_text_hint" />

        <TextView
            android:id="@+id/error_title"
            style="@style/TextAppearance.TempBoxBeta.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Connection Error"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/error_message"
            style="@style/TextAppearance.TempBoxBeta.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="Failed to load message"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retry_button"
            style="@style/Widget.TempBoxBeta.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try again"
            app:icon="@drawable/ic_refresh"
            app:iconSize="18dp" />

    </LinearLayout>

    <!-- Gmail-style Loading Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/gmail_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout> 